<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Batches</title>
</head>
<body>
    <h1>All Batches</h1>
    
    <table border="1">
        <thead>
            <tr>
                <th>Batch Name</th>
                <th>Timing</th>
                <th>Days</th>
                <th>Total Students</th>
                <th>View Students</th> <!-- Column for viewing students -->
            </tr>
        </thead>
        <tbody>
            <% batches.forEach(batch => { %>
                <tr>
                    <td><%= batch.name %></td>
                    <td><%= batch.timing %></td>
                    <td><%= batch.days.join(', ') %></td> <!-- Display batch days -->
                    <td><%= batch.students.length %></td> <!-- Count of students -->
                    <td><a href="/batch/<%= batch._id %>/students">View Students</a></td> <!-- Link to view students -->
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/create-batch">Create a New Batch</a> <!-- Link to create new batch -->
</body>
</html>
