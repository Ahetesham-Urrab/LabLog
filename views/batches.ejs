<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Batches</title>
</head>
<body>
    <h1>All Batches</h1>
    
    <table border="1">
        <thead>
            <tr>
                <th>Batch Name</th>
                <th>Timing</th>
                <th>Total Students</th>
                <th>Action</th> <!-- New column for action links -->
            </tr>
        </thead>
        <tbody>
            <% batches.forEach(batch => { %>
                <tr>
                    <td><%= batch.name %></td>
                    <td><%= batch.timing %></td>
                    <td><%= batch.students.length %></td> <!-- Count of students in the batch -->
                    <td>
                        <a href="/batches/<%= batch._id %>/students">View Students</a> <!-- Link to view students -->
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <a href="/create-batch">Create a New Batch</a> <!-- Link to the form for creating a new batch -->
</body>
</html>
