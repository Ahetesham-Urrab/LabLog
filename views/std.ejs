<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
</head>
<body>
    <h1>Student List</h1>
    <a href="/attandance2">Back to Attendance</a>

    <% if (students.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Serial No.</th> <!-- Added Serial No. header -->
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roll No.</th>
                    <th>Class</th>
                    <th>Student Id</th>
                    <th>BAR Code</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((student, index) => { %> <!-- Added index parameter -->
                    <tr>
                        <td><%= index + 1 %></td> <!-- Display serial number -->
                        <td><%= student.fullname %></td>
                        <td><%= student.email %></td>
                        <td><%= student.roll %></td>
                        <td><%= student.classs %></td>
                        <td><%= student.sid %></td>
                        <td><img src="<%= student.barcode %>" style="width: 70%;"></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No students found.</p>
    <% } %>
</body>
</html>
